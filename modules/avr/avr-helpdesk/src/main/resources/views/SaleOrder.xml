<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <form id="avr-helpdesk-sale-order-form" name="sale-order-form" title="Commande client"
    model="com.axelor.apps.sale.db.SaleOrder" extension="true">
    <extend target="/">
      <attribute name="onNew"
        value="action-group-supplychain-saleorder-onnew,action-record-avr-helpdesk-set-sale-order, action-sale-order-group-client-partner-change,action-record-avr-helpdesk-set-sale-order-currency"/>
    </extend>

  </form>

  <action-record name="action-record-avr-helpdesk-set-sale-order"
    model="com.axelor.apps.sale.db.SaleOrder">
    <field name="clientPartner" expr="eval:__parent__.customer"
      if="__parent__ != null &amp;&amp; __parent__.get('_model') == 'com.axelor.apps.helpdesk.db.Ticket'"/>
    <field name="ticket" expr="eval:__parent__"
      if="__parent__ != null &amp;&amp; __parent__.get('_model') == 'com.axelor.apps.helpdesk.db.Ticket'"/>
    <field name="clientPartner" expr="eval:_ticket.customer" if="_ticket != null"/>
    <field name="ticket" expr="eval:_ticket" if="_ticket != null"/>
  </action-record>

  <action-record name="action-record-avr-helpdesk-set-sale-order-currency"
    model="com.axelor.apps.sale.db.SaleOrder">
    <field name="currency" expr="eval:clientPartner.currency"
      if="clientPartner.currency != null"/>
  </action-record>

</object-views>