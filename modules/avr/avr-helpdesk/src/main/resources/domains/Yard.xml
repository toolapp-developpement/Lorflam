<?xml version="1.0" ?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">

  <module name="helpdesk" package="com.avr.apps.helpdesk.db"/>

  <entity name="Yard" cacheable="true">
    <string name="name" title="Name" required="true"/>
    <string name="yardReference" title="Référence chantier"/>
    <many-to-one name="partner" title="Installateur"
      ref="com.axelor.apps.base.db.Partner"/>
    <string name="fullName" title="Initulé complet" readonly="true" namecolumn="true">
            <![CDATA[
                return (getPartner() == null ? "" : (getPartner().getName() + " ")) + getYardReference();
            ]]>
    </string>
    <one-to-many name="ticketList" ref="com.axelor.apps.helpdesk.db.Ticket"
      mappedBy="yard"/>
    <one-to-many name="saleOrderList" ref="com.axelor.apps.sale.db.SaleOrder"
      mappedBy="yard"/>
    <one-to-many name="stockMoveList" ref="com.axelor.apps.stock.db.StockMove"
      mappedBy="yard"/>
    <one-to-many name="purchaseOrderList"
      ref="com.axelor.apps.purchase.db.PurchaseOrder" mappedBy="yard"/>
  </entity>
</domain-models>