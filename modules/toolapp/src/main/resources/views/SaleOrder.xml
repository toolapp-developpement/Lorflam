  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <form id="sale-order-form-custom" name="sale-order-form" title="Sale order"
    model="com.axelor.apps.sale.db.SaleOrder" extension="true">
    <extend target="//panel[@name='descriptionPanel']">
      <insert position="after">
        <panel name="ecoTaxTemplate" title="Eco Participation" colSpan="12">
          <field name="ecoTaxDetails" showTitle="false" widget="html" colSpan="12"/>
        </panel>
      </insert>
    </extend>

  </form>


</object-views>
