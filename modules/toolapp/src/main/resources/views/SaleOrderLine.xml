<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <form name="sale-order-line-form" title="SO line" id="custom-sale-order-line-form"
    model="com.axelor.apps.sale.db.SaleOrderLine" extension="true">
    <extend target="//field[@name='saleOrder']">
      <insert position="after">
        <field name="yard2" title="Référence Chantier"
          onChange="action.specifique.method.select.or.create.yard" colSpan="2"/>
      </insert>
    </extend>
    <extend target="//field[@name='discountTypeSelect']">
      <insert position="after">
        <field name="rateToApply" colSpan="6" grid-view="rate-to-apply-grid"/>
      </insert>
    </extend>
  </form>

  <action-method name="action.specifique.method.select.or.create.yard">
    <call class="bzh.toolapp.apps.specifique.web.PlanificationController"
      method="selectOrCreateYard(__this__.yard2)"/>
  </action-method>

  <grid name="sale-order-line-menu-grid" id="sale-order-line-menu-custo-grid" title="SO lines"
    model="com.axelor.apps.sale.db.SaleOrderLine" extension="true">
    <extend target="//field[@name='product.code']">
      <insert position="after">
        <field name="product.productCategory.code" title="Catégorie produit"/>
      </insert>
    </extend>

    <extend target="//field[@name='deliveredQty']">
      <insert position="after">
        <field name="qtyToDeliver" title="Quantité restante à livrer"/>
      </insert>
    </extend>
  </grid>

</object-views>