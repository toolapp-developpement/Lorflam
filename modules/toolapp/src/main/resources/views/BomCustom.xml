<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">


  <form name="bom-custo-form" title="Cas d'emploi"
    model="com.axelor.apps.production.db.TempBomTree" width="large"
    onNew="action-stock-details-record-set-user-s-company" canNew="false" canEdit="false"
    canSave="false" canCopy="false">
    <panel name="MainFilters" colSpan="12" itemSpan="4">
      <field name="product" title="Product" type="many-to-one" canEdit="false"
        domain="self.procurementMethodSelect='produce'"/>
      <field name="company" title="Company" showIf="product"/>
      <field name="stockLocation" title="Stock location" showIf="product &amp;&amp; $company"
        canEdit="false"/>
      <button name="bomTree" title="Arborescence" css="btn-custom"
        onClick="action-method-production-open-product-tree-custom" colspan="3"/>
    </panel>
  </form>


  <action-method name="action-method-production-open-product-tree-custom">
    <call method="openProductTree" class="bzh.toolapp.apps.specifique.web.ProductController"/>
  </action-method>

  <action-record name="action-stock-details-record-set-user-s-company"
    model="com.axelor.apps.base.db.Product">
    <field if="eval: _isFromMenu" name="$company" expr="eval: __user__.getActiveCompany()"/>
  </action-record>


  <form name="supplychain-stock-details-by-product-custo-form" title="Stock details by product"
    model="com.axelor.apps.base.db.Wizard" width="large"
    onNew="action-group-stock-details-by-product-on-new-custom" canNew="false" canSave="false"
    canCopy="false">
    <panel name="MainFilters" colSpan="12" itemSpan="4">
      <field name="$product" title="Product" type="many-to-one" canEdit="false"
        onChange="action-group-supplychain-update-indicators"
        target="com.axelor.apps.base.db.Product"
        domain="self.stockManaged = true AND self.dtype = 'Product' AND self.productTypeSelect = 'storable'"
        form-view="product-form" grid-view="product-grid"/>
      <field name="$company" title="Company" showIf="$product" type="many-to-one"
        canEdit="false"
        onChange="action-record-empty-company-and-stock-location, action-group-supplychain-update-indicators"
        target="com.axelor.apps.base.db.Company" form-view="company-form" grid-view="company-grid"/>
      <field name="$stockLocation" title="Stock location"
        showIf="$product &amp;&amp; $company" type="many-to-one" canEdit="false"
        onChange="action-group-supplychain-update-indicators"
        target="com.axelor.apps.stock.db.StockLocation"
        domain="self.typeSelect != 3 and self.company = :company" form-view="stock-location-form"
        grid-view="stock-location-grid"/>
    </panel>
    <panel name="mainPanelIndicators" showIf="$product">
      <panel name="indicators" title="Indicators" colSpan="12">
        <panel name="stockIndicators" colSpan="12" itemSpan="3">
          <button name="$realQty" title="Real quantity" icon="fa-building-o"
            onClick="action-supplychain-stock-move-line-product-real-quantity" widget="info-button"/>
          <button name="$futureQty" title="Future quantity" icon="fa-building-o"
            onClick="action-supplychain-stock-move-line-product-future-quantity"
            widget="info-button"/>
          <button name="$reservedQty" title="Reserved quantity" icon="fa-building-o"
            onClick="action-supplychain-stock-move-line-product-reserved" widget="info-button"/>
          <button
            if="__config__.app.isApp('supplychain') &amp;&amp; __config__.app.getApp('supplychain').getManageStockReservation()"
            name="$requestedReservedQty" title="Requested reserved quantity" icon="fa-building-o"
            onClick="action-method-suppplychain-stock-location-line-view-requested-reserved"
            widget="info-button"/>
        </panel>
        <panel name="supplychainIndicators" colSpan="12" itemSpan="3">
          <button name="$saleOrderQty" title="Sale order quantity" icon="fa-shopping-cart"
            onClick="action-method-supplychain-sale-order-product-planned" widget="info-button"/>
          <button name="$purchaseOrderQty" title="Purchase order quantity"
            icon="fa-shopping-cart"
            onClick="action-method-supplychain-purchase-order-product-planned" widget="info-button"/>
          <button name="$availableQty" title="Available stock" icon="fa-building-o"
            onClick="action-method-supplychain-stock-available-product" widget="info-button"/>
        </panel>
        <panel if-module="axelor-production" name="productionIndicators" colSpan="12"
          itemSpan="3">
          <button name="$buildingQty" title="Building quantity" icon="fa-cogs"
            onClick="action-method-production-building-quantity-product" widget="info-button"/>
          <button name="$consumeManufOrderQty" title="Consume manuf order quantity"
            icon="fa-cogs" onClick="action-method-production-consume-product" widget="info-button"/>
          <button name="$missingManufOrderQty" title="Missing manuf order quantity"
            icon="fa-cogs" onClick="action-method-production-missing-product" widget="info-button"/>
        </panel>
        <panel name="buttonPanel" colSpan="12" itemSpan="4">
          <button name="projectedStockButton" title="See projected stock" showIf="$product"
            onClick="action-supplychain-method-projected-stock"/>
          <button name="stockHistoryButton" title="See stock history"
            showIf="$product &amp;&amp; $company &amp;&amp; $stockLocation"
            onClick="action-supplychain-view-projected-stock"/>
          <field name="$stockLocationIdList" hidden="true"/>
        </panel>
      </panel>
      <panel-dashlet name="dashlet-views-stock-location-line-view-by-product"
        readonly="true" showIf="$product" colSpan="12" height="150"
        action="action-stock-location-line-view-by-product"/>
    </panel>
  </form>


  <tree name="bom-tree-detail" title="Bills of material">
    <column name="product" type="reference"/>
    <column name="qty" type="string" x-scale="2"/>
    <column name="unit" type="reference"/>
    <column name="prodProcess" type="reference"/>
    <column name="realQty" type="string" x-scale="2"/>
    <column name="futureQty" type="string" x-scale="2"/>
    <column name="reservedQty" type="string" x-scale="2" title="Qté réservé"/>
    <column name="requestedReservedQty" type="string" x-scale="2"
      title="Qté demandée de réservation"/>
    <column name="purchaseOrderQty" type="string" x-scale="2" title="Qté cde fournisseur"/>
    <column name="saleOrderQty" type="string" x-scale="2" title="Qté cde client"/>
    <column name="availableQty" type="string" x-scale="2" title="Stock disponible"/>
    <column name="buildingQty" type="string" x-scale="2" title="Qté en fabrication"/>
    <column name="consumeManufOrderQty" type="string" x-scale="2" title="Qté conso OF"/>
    <column name="missingManufOrderQty" type="string" x-scale="2" title="Qté manquante OF"/>
    <node model="com.axelor.apps.production.db.TempBomTree"
      onClick="action-bill-of-material-line-view" domain="self.id = :_tempBomTreeId">
      <field name="product" as="product"/>
      <field name="qtyStr" as="qty"/>
      <field name="unit" as="unit"/>
      <field name="prodProcess" as="prodProcess"/>
      <field name="realQtyStr" as="realQty"/>
      <field name="futureQtyStr" as="futureQty"/>
      <field name="reservedQtyStr" as="reservedQty"/>
      <field name="requestedReservedQtyStr" as="requestedReservedQty"/>
      <field name="purchaseOrderQtyStr" as="purchaseOrderQty"/>
      <field name="saleOrderQtyStr" as="saleOrderQty"/>
      <field name="availableQtyStr" as="availableQty"/>
      <field name="buildingQtyStr" as="buildingQty"/>
      <field name="consumeManufOrderQtyStr" as="consumeManufOrderQty"/>
      <field name="missingManufOrderQtyStr" as="missingManufOrderQty"/>
    </node>
    <node model="com.axelor.apps.production.db.TempBomTree" parent="parent"
      onClick="action-bill-of-material-line-view" draggable="true">
      <field name="product" as="product"/>
      <field name="qtyStr" as="qty"/>
      <field name="unit" as="unit"/>
      <field name="prodProcess" as="prodProcess"/>
      <field name="realQtyStr" as="realQty"/>
      <field name="futureQtyStr" as="futureQty"/>
      <field name="reservedQtyStr" as="reservedQty"/>
      <field name="requestedReservedQtyStr" as="requestedReservedQty"/>
      <field name="purchaseOrderQtyStr" as="purchaseOrderQty"/>
      <field name="saleOrderQtyStr" as="saleOrderQty"/>
      <field name="availableQtyStr" as="availableQty"/>
      <field name="buildingQtyStr" as="buildingQty"/>
      <field name="consumeManufOrderQtyStr" as="consumeManufOrderQty"/>
      <field name="missingManufOrderQtyStr" as="missingManufOrderQty"/>
    </node>
  </tree>

  <action-group name="action-group-stock-details-by-product-on-new-custom">
    <action name="action-record-stock-details-by-product-init-product-custom"/>
    <action name="action-method-find-all-sublocation"/>
    <action name="action-method-update-indicators"/>
    <action name="action-attrs-reload-panel-dashlet"/>
    <action name="action-stock-details-record-set-user-s-company"/>
  </action-group>


  <form name="projected-stock-form-custome" title="Projected stock"
    model="com.axelor.apps.supplychain.db.MrpLine" width="large"
    onNew="action-record-supplychain-projected-stock-on-new" canNew="false" canEdit="false"
    canSave="false" canDelete="false">
    <panel name="projected-stock-form-custom-panel" colSpan="12">
      <panel-dashlet showTitle="false" colSpan="12"
        action="action.projected.stock.dashlet.custom"/>
      <field name="$mrpLineList" readonly="true" colSpan="12" height="150" type="one-to-many"
        target="com.axelor.apps.supplychain.db.MrpLine" grid-view="projected-stock-grid-custome"/>
    </panel>
  </form>

  <action-view name="action.projected.stock.dashlet.custom" title="Projected Stock">
    <view name="chart.projected.stock.custom" type="chart"/>
    <context name="_mrpLineListToProject" expr="eval: _mrpLineList"/>
  </action-view>

  <chart name="chart.projected.stock.custom" title="Projected stock">
    <dataset type="rpc"><![CDATA[bzh.toolapp.apps.specifique.web.ProductController:showCustomeChartProjectedStock]]></dataset>
    <category key="name" type="date" title="Date"/>
    <series key="cumulativeQty" type="line" title="Qty"/>
  </chart>


  <grid name="projected-stock-grid-custome" title="Projected stock"
    model="com.axelor.apps.supplychain.db.MrpLine"
    orderBy="product.code,maturityDate,mrpLineType.typeSelect,mrpLineType.sequence,id"
    edit-icon="false">
    <hilite color="info" strong="true"
      if="[5,8,9].indexOf($get('mrpLineType.elementSelect')) != -1"/>
    <hilite color="success" strong="true" if="mrpLineType.elementSelect == 1"/>
    <field name="product" hidden="true"/>
    <field name="maturityDate" width="110"/>
    <field name="mrpLineType" width="210"/>
    <field name="qty" width="100" x-scale="2"/>
    <field name="cumulativeQty" css="bold" width="130" x-scale="2"/>
    <field name="unit" width="80"/>
    <field name="company"/>
    <field name="stockLocation"/>
    <field name="relatedToSelectName" width="150"/>
    <field name="partner"/>
    <field name="mrpLineType.elementSelect" hidden="true"/>
  </grid>



  <action-record name="action-record-stock-details-by-product-init-product-custom"
    model="com.axelor.apps.base.db.Product">
    <field name="$product" expr="eval: _product"/>
    <field name="$company" expr="eval: _company"/>
    <field name="$stockLocation" expr="eval:_stockLocation"/>
    <field name="$product" expr="eval:_productMrp"/>
    <field name="$stockLocation" expr="eval:_stockLocationMrp"/>
  </action-record>

</object-views>