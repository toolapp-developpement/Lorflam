<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="invoice-eco-tax-detail-grid" title="Invoice eco tax detail"
    model="com.axelor.apps.toolapp.db.InvoiceEcoTaxDetail">
    <field name="ecoTax" title="Eco tax"/>
    <field name="amount" title="Amount"/>
  </grid>

  <form name="invoice-eco-tax-detail-form" title="Invoice eco tax detail"
    model="com.axelor.apps.toolapp.db.InvoiceEcoTaxDetail">
    <panel name="mainPanel" title="Main">
      <field name="ecoTax" title="Eco tax"/>
      <field name="amount" title="Amount"/>
    </panel>
  </form>

  <grid name="eco-tax-grid" title="Eco tax" model="com.axelor.apps.toolapp.db.EcoTax">
    <field name="code" title="Name"/>
    <field name="description" title="Value"/>
  </grid>

  <form name="eco-tax-form" title="Eco tax" model="com.axelor.apps.toolapp.db.EcoTax"
    width="large">
    <panel name="mainPanel" title="Main">
      <field name="code"/>
      <field name="description"/>
    </panel>
    <panel-related field="productList" canSelect="true" canNew="false" canEdit="false"
      title="Produits associés"></panel-related>
    <panel-related field="invoiceLineList" canSelect="false" canEdit="false"
      canNew="false" title="Lignes de factures associées"></panel-related>
  </form>

</object-views>
