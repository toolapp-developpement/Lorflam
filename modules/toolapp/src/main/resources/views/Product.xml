<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <form name="product-form" id="product-form-custom" title="Product"
    model="com.axelor.apps.base.db.Product" width="large" extension="true">
    <extend target="//field[@name='procurementMethodSelect']">
      <insert position="after">
        <field name="abcAnalysisClass"/>
      </insert>
    </extend>
    <extend target="//field[@name='fullName']">
      <insert position="after">
        <field name="refSupProd"/>
      </insert>
    </extend>

    <extend target="//field[@name='productCategory']">
      <insert position="after">
        <field name="ecoTax" title="Eco tax" massUpdate="true" colSpan="12"/>
      </insert>
    </extend>
  </form>

  <grid name="product-grid" id="ecotax-product-grid" title="Product"
    model="com.axelor.apps.base.db.Product" extension="true">
    <extend target="//field[@name='productCategory']">
      <insert position="after">
        <field name="ecoTax" title="Eco tax"/>
      </insert>
    </extend>
  </grid>
</object-views>